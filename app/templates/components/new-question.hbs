<form>
  <div class="form-group">
    <label for="author">Your Name:</label>
    {{input value=author id='author'}}
  </div>
  <div class="form-group">
    <label for="date">Date:</label>
    {{input value=date id='date' type=date}}
  </div>
  <div class="form-group">
    <label for="query">What's your question?</label>
    {{input value=query id='query'}}
  </div>
  <div class="form-group">
    <label for="notes">Anything more to say?</label>
    {{input value=notes id='notes'}}
  </div>
  <div class="form-group">
    <label for="tag">Choose a Tag:</label>
    {{input value=tag id='tag'}}
  </div>
  <button class="btn" {{action 'save'}}>Save</button>
</form>
