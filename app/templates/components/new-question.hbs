<form>
  <div class="form-group">
    <label for="author">Your Name:</label>
    {{input value=author id='author' class='form-control'}}
  </div>
  <div class="form-group">
    <label for="date">Date:</label>
    {{input value=date id='date' type="date" class='form-control'}}
  </div>
  <div class="form-group">
    <label for="query">What's your question?</label>
    {{input value=query id='query' class='form-control'}}
  </div>
  <div class="form-group">
    <label for="notes">Anything more to say?</label>
    {{input value=notes id='notes' class='form-control'}}
  </div>
  <div class="form-group">
    <label for="tag">Choose a Tag: Science, Tech, Entertainment, Relationships, or Random</label>
    {{input value=tag id='tag' class='form-control'}}
  </div>
  <button class="btn btn-lg" {{action 'save'}}>Save</button>
</form>
