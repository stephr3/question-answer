{{#if showAddAnswer}}
  <form>
    <div class="form-group">
      <label for="author">Your Name:</label>
      {{input value=author id='author'}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id='date' type="date"}}
    </div>
    <div class="form-group">
      <label for="content">What's your answer?</label>
      {{input value=content id='content'}}
    </div>
    <button class="btn">Save</button>
  </form>
{{else}}
  <button class="btn" {{action 'showAddAnswer'}}>Add a New Answer!</button>
{{/if}}
