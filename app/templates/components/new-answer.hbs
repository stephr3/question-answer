{{#if showAddAnswer}}
  <form>
    <div class="form-group">
      <label for="author">Your Name:</label>
      {{input value=author id='author' class='form-control'}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id='date' type="date" class='form-control'}}
    </div>
    <div class="form-group">
      <label for="content">What's your answer?</label>
      {{input value=content id='content' class='form-control'}}
    </div>
    <button class="btn" {{action 'saveAnswer'}}>Save</button>
  </form>
  <br>
  <br>
{{else}}
  <button class="btn" {{action 'showAddAnswer'}}>Add a New Answer!</button>
  <br>
  <br>
{{/if}}
